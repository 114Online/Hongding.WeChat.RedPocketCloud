@{ 
    ViewBag.Title = "创建优惠券";
}

<div class="col-md-6 col-md-offset-3">
    <div class="card">
        <div class="header">
            <h4 class="title">@ViewBag.Title</h4>
            <p class="category">编写优惠券有效期、图片、介绍等</p>
        </div>
        <form asp-action="Add" asp-controller="Coupon" method="post" enctype="multipart/form-data" class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
                <tr>
                    <td>优惠券名称</td>
                    <td><input type="text" class="form-control" name="Title" /></td>
                </tr>
                <tr>
                    <td>商家名称</td>
                    <td><input type="text" class="form-control" name="Provider" /></td>
                </tr>
                <tr>
                    <td>有效期（天）</td>
                    <td><input type="text" class="form-control" name="Time" value="30" /></td>
                </tr>
                <tr>
                    <td>介绍</td>
                    <td><input type="text" class="form-control" name="Description" /></td>
                </tr>
                <tr>
                    <td>商家Logo</td>
                    <td><input type="file" class="form-control" name="icon" /></td>
                </tr>
                <tr>
                    <td>优惠券图片</td>
                    <td><input type="file" class="form-control" name="coupon" /></td>
                </tr>
            </table>
            <p style="text-align: center"><input type="submit" class="btn btn-success" value="创建" /></p>
        </form>
    </div>
</div>