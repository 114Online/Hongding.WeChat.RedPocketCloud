@model Coupon
@{ 
    ViewBag.Title = "编辑优惠券";
}

<div class="col-md-6 col-md-offset-3">
    <div class="card">
        <div class="header">
            <h4 class="title">@ViewBag.Title</h4>
            <p class="category">编辑优惠券有效期、图片、介绍等</p>
        </div>
        <form asp-action="Edit" asp-controller="Coupon" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
                <tr>
                    <td>优惠券名称</td>
                    <td><input type="text" class="form-control" asp-for="Title" /></td>
                </tr>
                <tr>
                    <td>商家名称</td>
                    <td><input type="text" class="form-control" asp-for="Provider" /></td>
                </tr>
                <tr>
                    <td>有效期（天）</td>
                    <td><input type="text" class="form-control" asp-for="Time" value="30" /></td>
                </tr>
                <tr>
                    <td>介绍</td>
                    <td><input type="text" class="form-control" asp-for="Description" /></td>
                </tr>
                <tr>
                    <td>优惠券图片</td>
                    <td>
                        <img src="/file/download/@Model.ImageId" style="max-width: 100%;" />
                        <br /><br />
                        <input type="file" class="form-control" name="coupon" />
                    </td>
                </tr>
            </table>
            <p style="text-align: center"><input type="submit" class="btn btn-success" value="修改" /></p>
        </form>
    </div>
</div>