@model IEnumerable<dynamic>
@{
    ViewBag.Title = "优惠券管理";
}

<div class="card">
    <div class="header">
        <h4 class="title">@ViewBag.Title</h4>
        <p class="category">优惠券信息修改、删除等。<a asp-action="Add" asp-controller="Coupon">添加</a></p>
    </div>
    <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>提供商</th>
                    <th>有效期</th>
                    <th>描述</th>
                    @if (User.IsInRole("Root"))
                    {
                        <th>创建者</th>
                    }
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Provider</td>
                    <td>@(new TimeSpan(x.Time, 0, 0, 0)) 天</td>
                    <td>@x.Description</td>
                    @if (User.IsInRole("Root"))
                    {
                        <td>@(x.Merchant == null ? x.UserName : x.Merchant)</td>
                    }
                    <td>
                        <a asp-action="Edit" asp-controller="Coupon" asp-route-id="@x.Id">编辑</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-top:-30px;">
    @Html.Paging("", "active", "pagination")
</div>