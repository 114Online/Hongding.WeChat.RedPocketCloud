@model Prompt
@{ 
    ViewBag.Title = "提示信息";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">@Model.Title</h4>
            </div>
            <div class="content">
                @Model.Details
                <hr />
                <p style="text-align: center">
                    <a href="/" class="btn btn-success">返回首页</a>
                    <a href="javascript:window.history.go(-1);" class="btn btn-info">返回上一页</a>
                </p>
            </div>
        </div>
    </div>
</div>