@{
    ViewBag.Title = "补发红包";
}

<form asp-action="Compensate" asp-controller="RedPocket" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">补发红包</h4>
                <p class="category">红包未到账、漏发可通过此功能进行补发，补发前请确保账户余额充足。</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td>Open ID</td>
                        <td><input class="form-control" type="text" value="" name="openid" /></td>
                    </tr>
                    <tr>
                        <td>金额（元）</td>
                        <td><input class="form-control" type="text" value="0.00" name="price" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="发送" />
                </p>
            </div>
        </div>
    </div>
</form>