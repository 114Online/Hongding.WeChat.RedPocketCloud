@{
    ViewBag.Title = "添加黑名单";
}
<form asp-action="AddBlackList" asp-controller="RedPocket" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">添加黑名单</h4>
                <p class="category">将一个Open ID添加至黑名单中</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td>Open ID</td>
                        <td><input type="text" name="openid" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>解锁日期 (不填则为永久封禁)</td>
                        <td><input type="text" name="unlock" class="form-control datetime" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="封禁" />
                </p>
            </div>
        </div>
    </div>
</form>