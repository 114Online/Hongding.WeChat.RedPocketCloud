@{ 
    ViewBag.Title = "添加商户";
}

<form asp-action="Create" asp-controller="Account" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">添加商户</h4>
                <p class="category">创建一个商户账号。</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td class="row-title">用户名</td>
                        <td><input type="text" name="username" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td class="row-title">密码</td>
                        <td><input type="password" name="password" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td class="row-title">角色</td>
                        <td>
                            <select name="role" class="form-control">
                                <option value="Member">普通商户</option>
                                <option value="Root">管理员</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="row-title">商户名称</td>
                        <td><input type="text" name="merchant" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td class="row-title">初始金额（元）</td>
                        <td><input type="text" name="balance" class="form-control" value="0.00" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="创建" />
                </p>
            </div>
        </div>
    </div>
</form>