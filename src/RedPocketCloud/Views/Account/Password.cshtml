@{ 
    ViewBag.Title = "修改密码";
}

<form asp-action="Password" asp-controller="Account" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">修改密码</h4>
                <p class="category">设置一个新的密码用于登录等操作</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td>旧密码</td>
                        <td><input type="password" name="old" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>新密码</td>
                        <td><input type="password" name="new" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>密码重复</td>
                        <td><input type="password" name="confirm" class="form-control" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="修改" />
                </p>
            </div>
        </div>
    </div>
</form>