@{ 
    ViewBag.Title = "商户充值";
}

<form asp-action="Charge" asp-controller="Account" asp-route-id="@Model.Id" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h4 class="title">商户充值</h4>
                <p class="category">为商户充入资金，可用于举办发红包活动。</p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <td>金额（元）</td>
                        <td><input class="form-control" type="text" value="0.00" name="price" /></td>
                    </tr>
                </table>
                <p style="text-align: center">
                    <input type="submit" class="btn btn-danger" value="充值" />
                </p>
            </div>
        </div>
    </div>
</form>