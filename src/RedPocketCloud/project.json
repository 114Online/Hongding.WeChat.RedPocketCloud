{
  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.0.0",
      "type": "platform"
    },
    "Microsoft.AspNetCore.Diagnostics": "1.0.0",
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0",
    "Microsoft.AspNetCore.Mvc": "1.0.0",
    "Microsoft.AspNetCore.Mvc.TagHelpers": "1.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0",
    "Microsoft.AspNetCore.Session": "1.0.0",
    "Microsoft.AspNetCore.WebSockets.Server": "0.1.0",
    "Microsoft.AspNetCore.SignalR.Server": "0.1.0",
    "Microsoft.Extensions.Logging.Console": "1.0.0",
    "Pomelo.AspNetCore.SignalR.Redis": "0.1.0",
    "Pomelo.AspNetCore.Extensions": "1.0.0-prerelease-20160813",
    "Pomelo.AspNetCore.TimedJob": "1.0.0-prerelease-20160813",
    "Pomelo.Extensions.Caching": "1.0.0-prerelease-20160813",
    "Pomelo.Data.Excel": "1.0.0-prerelease-20160730",
    "Pomelo.Extensions.Caching.Redis": "1.0.0",
    "Pomelo.EntityFrameworkCore.MySql": "1.0.0",
    "Pomelo.EntityFrameworkCore.MyCat": "1.0.0-prerelease-20160817",
    "Pomelo.EntityFrameworkCore.Lolita.MySql": "1.0.0"
  },

  "tools": {
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-preview2-final"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true,
    "nowarn": ["CS1998", "CS4014"]
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "publishOptions": {
    "include": [
      "Views",
      "wwwroot",
      "web.config",
      "config.json",
      "Certificates"
    ]
  },

  "scripts": {
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}
