@model IEnumerable<Activity>
@{ 
    ViewBag.Title = "红包活动";
}

<div class="card">
    <div class="header">
        <h4 class="title">红包列表</h4>
        <p class="category">正在进行的、已经结束的发红包活动列表。<a asp-action="Deliver" asp-controller="RedPacket">发放红包</a></p>
    </div>
    <div class="content">
        <form>
            @if (User.IsInRole("Root"))
            {
                <div class="col-md-3">
                    <input type="text" class="form-control" placeholder="活动名称" name="title" />
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control datetime" placeholder="时间（从）" name="begin" />
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control datetime" placeholder="时间（到）" name="end" />
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="商户名称" name="merchant" />
                </div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-primary" value="查询" />
                </div>
            }
            else
            {
                <div class="col-md-3">
                    <input type="text" class="form-control" placeholder="活动名称" name="title" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control datetime" placeholder="时间（从）" name="begin" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control datetime" placeholder="时间（到）" name="end" />
                </div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-primary" value="查询" />
                </div>
            }
        </form>
    </div>
    <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>活动名称</th>
                    <th>状态</th>
                    @if (User.IsInRole("Root"))
                    {
                        <th>创建者</th>
                    }
                    <th>开始时间</th>
                    <th>结束时间</th>
                    <th>总金额</th>
                    <th>红包数</th>
                    <th>中奖率</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Title</td>
                        @if (x.End.HasValue)
                        {
                            <td><span class="label label-default">已经结束</span></td>
                        }
                        else
                        {
                            <td><span class="label label-danger">正在进行</span></td>
                        }
                        @if (User.IsInRole("Root"))
                        {
                            <td>@x.Owner.UserName</td>
                        }
                        <td>@x.Begin</td>
                        <td>@x.End</td>
                        <td>￥@((x.Price / 100.0).ToString("0.00"))</td>
                        <td>@x.BriberiesCount</td>
                        <td>@((x.Ratio * 100).ToString("0.00"))%</td>
                        <td>
                            <a asp-action="Show" asp-controller="RedPacket" asp-route-id="@x.Id">查看详情</a>
                            <a asp-action="Export" asp-controller="RedPacket" asp-route-id="@x.Id">导出报表</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-top:-30px;">
    @Html.Paging("", "active", "pagination")
</div>